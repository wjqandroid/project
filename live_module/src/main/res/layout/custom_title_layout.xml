<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip46"
    android:background="@color/COLOR_WHITE_FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/match_height_45"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/width_45_height_45"
            android:contentDescription="@string/desc"
            android:paddingTop="@dimen/dip13"
            android:paddingBottom="@dimen/dip13"
            android:src="@drawable/arrow_left"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/wrap_layout"
            android:layout_centerInParent="true"
            android:textColor="@color/COLOR_BLACK_222222"
            android:textSize="@dimen/font18" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_toLeftOf="@+id/iv_search"
            style="@style/width_45_height_45"
            android:contentDescription="@string/desc"
            android:paddingTop="@dimen/dip12"
            android:paddingLeft="@dimen/dip16"
            android:paddingBottom="@dimen/dip12"
            android:src="@drawable/ic_collect"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_search"
            style="@style/width_45_height_45"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/desc"
            android:paddingTop="@dimen/dip12"
            android:paddingBottom="@dimen/dip12"
            android:src="@drawable/ic_search"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/line_style" />

</LinearLayout>