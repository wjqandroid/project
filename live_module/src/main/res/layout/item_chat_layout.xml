<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    android:layout_marginLeft="@dimen/dip10"
    android:layout_marginTop="@dimen/dip5"
    android:layout_marginRight="@dimen/dip10"
    android:layout_marginBottom="@dimen/dip5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_receiver_layout"
        style="@style/match_wrap"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_receiver_name"
            style="@style/wrap_layout"
            android:text="150****1987"
            android:textColor="@color/COLOR_BLACK_333333"
            android:textSize="@dimen/font14" />

        <LinearLayout
            style="@style/wrap_layout"
            android:background="@drawable/bg_soild_dee1df_r5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_receiver_question"
                android:layout_width="@dimen/dip15"
                android:layout_height="@dimen/dip15"
                android:layout_marginLeft="@dimen/dip5"
                android:layout_marginTop="@dimen/dip5"
                android:layout_marginBottom="@dimen/dip5"
                android:src="@drawable/ic_question" />

            <TextView
                android:id="@+id/tv_receiver_question"
                style="@style/wrap_layout"
                android:layout_marginLeft="@dimen/dip5"
                android:layout_marginTop="@dimen/dip2"
                android:layout_marginRight="@dimen/dip5"
                android:layout_marginBottom="@dimen/dip5"
                android:text="150****1987"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="@dimen/font14" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sender_layout"
        style="@style/match_wrap"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_sender_name"
            style="@style/wrap_layout"
            android:layout_gravity="right"
            android:text="150****1987"
            android:textColor="@color/COLOR_BLACK_333333"
            android:textSize="@dimen/font14" />

        <LinearLayout
            style="@style/wrap_layout"
            android:layout_gravity="right"
            android:background="@drawable/bg_soild_dee1df_r5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sender_question"
                android:layout_width="@dimen/dip15"
                android:layout_height="@dimen/dip15"
                android:layout_marginLeft="@dimen/dip5"
                android:layout_marginTop="@dimen/dip5"
                android:layout_marginBottom="@dimen/dip5"
                android:src="@drawable/ic_question" />

            <TextView
                android:id="@+id/tv_sender_question"
                style="@style/wrap_layout"
                android:layout_marginLeft="@dimen/dip5"
                android:layout_marginTop="@dimen/dip2"
                android:layout_marginRight="@dimen/dip5"
                android:layout_marginBottom="@dimen/dip5"
                android:text="150****1987"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="@dimen/font14" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>