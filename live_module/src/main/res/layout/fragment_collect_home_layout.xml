<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_layout"
    android:background="@color/COLOR_WHITE_FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/custom_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip60"
        android:background="@color/COLOR_WHITE_F5F5F5">

        <LinearLayout
            style="@style/wrap_layout"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_live"
                android:layout_width="@dimen/dip120"
                android:layout_height="@dimen/dip40"
                android:background="@color/COLOR_BLUE_21A3F0"
                android:gravity="center"
                android:text="@string/live"
                android:textColor="@color/COLOR_WHITE_FFFFFF"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/tv_record"
                android:layout_width="@dimen/dip120"
                android:layout_height="@dimen/dip40"
                android:background="@drawable/bg_solid_ffffff_stroke_1_cccccc"
                android:gravity="center"
                android:text="@string/record"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="@dimen/font16" />
        </LinearLayout>

    </RelativeLayout>

    <View style="@style/line_style" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_collect"
        style="@style/match_layout" />
</LinearLayout>