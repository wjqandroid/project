<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_layout"
    android:orientation="vertical">

    <ScrollView
        style="@style/match_wrap"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginTop="@dimen/dip10"
        android:layout_marginRight="@dimen/dip12"
        android:paddingBottom="@dimen/dip10"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/introduction_container"
            style="@style/match_wrap"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/introduction_linearlayout"
                style="@style/wrap_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.visionvera.library.widget.view.CircleImageView
                    android:id="@+id/iv_expert_head"
                    style="@style/width_70_height_70"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_head_default" />

                <LinearLayout
                    style="@style/wrap_layout"
                    android:layout_marginLeft="@dimen/dip10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_expert_name"
                        style="@style/wrap_layout"
                        android:textColor="@color/COLOR_BLACK_333333"
                        android:textSize="@dimen/font16" />

                    <LinearLayout
                        style="@style/wrap_layout"
                        android:layout_marginTop="@dimen/dip5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hospital"
                            style="@style/wrap_layout"
                            android:textColor="@color/COLOR_GRAY_999999"
                            android:textSize="@dimen/font14"
                            tools:text="中国心理卫生协会" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_expert_desc"
                style="@style/wrap_layout"
                android:layout_marginTop="@dimen/dip5"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="@dimen/font14" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>