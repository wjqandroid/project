<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginTop="@dimen/dip10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            style="@style/wrap_layout"
            android:text="08:15-08:48"
            android:textColor="@color/COLOR_BLACK_222222"
            android:textSize="@dimen/font14" />

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginLeft="@dimen/dip30"
            android:layout_marginRight="@dimen/dip8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_schedule"
                style="@style/wrap_layout"
                android:text="大会注册报名"
                android:textColor="@color/COLOR_BLACK_222222"
                android:textSize="@dimen/font14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_child_schedule"
                style="@style/wrap_layout"
                android:text="大会注册报名"
                android:textColor="@color/COLOR_BLACK_222222"
                android:textSize="@dimen/font14" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>