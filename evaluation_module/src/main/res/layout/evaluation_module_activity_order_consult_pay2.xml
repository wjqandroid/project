<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".module.counselling.activity.OrderConsultActivity">

    <include layout="@layout/base_module_common_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/COLOR_WHITE_F5F5F5">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:paddingVertical="@dimen/dip10"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_toRightOf="@+id/evaluation_module_counselor_detail_header"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约咨询师"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="17sp" />

                <TextView
                    android:gravity="center_vertical|end"
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2020年7月29日  18:00-20:00"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dip1"
                android:background="@color/COLOR_white_ffffff"
                android:paddingVertical="@dimen/dip10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.visionvera.library.widget.view.CircleImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/dip56"
                    android:layout_height="@dimen/dip56"
                    android:layout_marginLeft="@dimen/dip15"
                    android:src="@drawable/base_module_default_man" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_marginLeft="@dimen/dip12"
                    android:layout_marginRight="@dimen/dip15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:id="@+id/tvName"
                            style="@style/wrap_layout"
                            android:text="张豆豆"
                            android:ellipsize="end"
                            android:maxEms="7"
                            android:textColor="@color/COLOR_BLACK_000000"
                            android:textSize="@dimen/font16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginHorizontal="@dimen/dip5"
                            android:singleLine="true"
                            style="@style/wrap_layout"
                            android:text="/"
                            android:textColor="@color/COLOR_BLACK_000000"
                            android:textSize="@dimen/font16" />

                        <TextView
                            android:id="@+id/tv_number"
                            style="@style/wrap_layout"
                            android:text="3255"
                            android:textColor="#F83F3B"
                            android:textSize="@dimen/font13" />

                        <TextView
                            style="@style/wrap_layout"
                            android:text="人咨询"
                            android:textColor="@color/COLOR_BLACK_000000"
                            android:textSize="@dimen/font14" />

                        <TextView
                            android:gravity="end"
                            android:id="@+id/tv_city"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dip10"
                            tools:text="北京市"
                            android:textColor="@color/COLOR_BLACK_000000"
                            android:textSize="@dimen/font14" />


                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_marginRight="@dimen/dip5"
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:src="@color/base_module_theme"
                            app:civ_border_width="0dp"
                            app:civ_border_color="@color/base_module_theme" />

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="二级心理咨询师、中美高级精神分析班学员"
                            android:textColor="@color/COLOR_GRAY_999999"
                            android:textSize="@dimen/font13" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvTag"
                        style="@style/wrap_layout"
                        android:text="#慢性压力   #成长创伤   #适应障碍"
                        android:textColor="@color/COLOR_BLUE_3E86FE"
                        android:textSize="@dimen/font12" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dip1"
                android:paddingVertical="@dimen/common_padding_vertical"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_toRightOf="@+id/evaluation_module_counselor_detail_header"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询类型"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_marginTop="@dimen/dip16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文字咨询"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/dip1"
                android:paddingVertical="@dimen/common_padding_vertical"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_toRightOf="@+id/evaluation_module_counselor_detail_header"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附件"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    tools:itemCount="2"
                    android:id="@+id/recyclerViewFujian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dip1"
                android:paddingVertical="@dimen/common_padding_vertical"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_toRightOf="@+id/evaluation_module_counselor_detail_header"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginStart="@dimen/dip5"
                    android:gravity="end"
                    android:id="@+id/tvBeizhu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="我感觉自己的睡眠不实很好，经常失眠。"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discount_ticket"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dip10"
                android:paddingVertical="@dimen/common_padding_vertical"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/evaluation_module_youhuiquan"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_marginStart="@dimen/dip10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="暂无可用"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="@dimen/dip10"
                    android:layout_height="@dimen/dip10"
                    android:background="@drawable/evaluation_module_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dip1"
                android:paddingVertical="@dimen/common_padding_vertical"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/evaluation_module_happy_peas"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_marginStart="@dimen/dip10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="106个  满100可用，可抵扣：10.00"
                    android:textColor="#ff222222"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkBox"
                    style="@style/account_module_MyCheckBox"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:checked="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlConvertCode"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dip1"
                android:paddingVertical="@dimen/common_padding_vertical"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换码"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="@dimen/font14" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/dip10"
                    android:layout_height="@dimen/dip10"
                    android:background="@drawable/evaluation_module_arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dip10"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:id="@+id/ll_zhifubao"
                android:background="@color/COLOR_white_ffffff"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48">

                <ImageView
                    android:src="@drawable/alipay"
                    android:layout_width="@dimen/dip18"
                    android:layout_height="@dimen/dip18" />

                <TextView
                    android:layout_marginLeft="@dimen/dip10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="支付宝快捷支付"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="@dimen/font14" />

                <CheckBox
                    android:id="@+id/rb_zhifubao"
                    style="@style/account_module_MyCheckBox"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:checked="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/COLOR_white_ffffff"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:id="@+id/ll_weixin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48">

                <ImageView
                    android:src="@drawable/wenxin"
                    android:layout_width="@dimen/dip18"
                    android:layout_height="@dimen/dip18" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="@dimen/font14" />

                <CheckBox
                    android:id="@+id/rb_weixin"
                    style="@style/account_module_MyCheckBox"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:checked="false"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:paddingVertical="@dimen/common_padding_vertical"
        android:background="@color/COLOR_white_ffffff"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_toLeftOf="@id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计："
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text=" ¥600.00"
                    android:textColor="#F83F3B"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首单折扣："
                    android:textColor="#F83F3B"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-50%  -500.00"
                    android:textColor="#F83F3B"
                    android:textSize="@dimen/dip10" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/tv_submit"
            android:gravity="center"
            android:background="@drawable/account_module_bg_login"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dip150"
            android:layout_height="@dimen/dip42"
            android:text="提交订单"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dip15" />
    </RelativeLayout>

</LinearLayout>
