<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_white_ffffff"
    android:padding="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/evaluation_module_fragment_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/COLOR_BLUE_FF3E86FE"
                android:textSize="18sp"
                tools:text="1/20" />

            <TextView
                android:id="@+id/evaluation_module_fragment_question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="18sp"
                tools:text="----"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="14dp"
            android:background="@color/COLOR_GRAY_EBECF0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/evaluation_module_voice_layout_bg">

            <EditText
                android:id="@+id/input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="12sp"
                android:textColor="@color/COLOR_GRAY_999999"
                android:hint="请输入您的答案"
                android:gravity="left|top"
                android:layout_margin="15dp"
                android:layout_above="@+id/evaluation_module_voice_iv"
                />


            <ImageView
                android:id="@+id/evaluation_module_voice_iv"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:src="@drawable/evaluation_module_voice_iv"
                />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
