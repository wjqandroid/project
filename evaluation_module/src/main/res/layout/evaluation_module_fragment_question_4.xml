<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_white_ffffff"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/common_padding_horizontal">


    <com.visionvera.psychologist.c.widget.BubbleSeekBar
        android:id="@+id/evaluation_module_seekbar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:evaluation_module_bsb_auto_adjust_section_mark="true"
        app:evaluation_module_bsb_second_track_color="#3E86FE"
        app:evaluation_module_bsb_section_count="10"
        app:evaluation_module_bsb_max="10"
        app:evaluation_module_bsb_section_text_position="below_section_mark"
        app:evaluation_module_bsb_show_section_mark="true"
        app:evaluation_module_bsb_show_section_text="true"
        app:evaluation_module_bsb_show_thumb_text="true"
        app:evaluation_module_bsb_track_color="#EEEEEE"
        app:evaluation_module_bsb_hide_bubble="true"
        />

</LinearLayout>
