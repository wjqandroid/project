<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_white_ffffff"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连续签到领心豆"
        android:textColor="#ff333333"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_marginTop="@dimen/dip10"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal">

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/evaluation_module_shape_solid_fff2f5fb_corner6"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/dip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一天"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginVertical="@dimen/dip3"
                android:src="@drawable/evaluation_module_bean"
                android:layout_width="@dimen/dip24"
                android:layout_height="@dimen/dip24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20心豆"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="@dimen/dip10"
            android:background="@drawable/evaluation_module_shape_solid_fff2f5fb_corner6"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/dip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第二天"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginVertical="@dimen/dip3"
                android:src="@drawable/evaluation_module_bean"
                android:layout_width="@dimen/dip24"
                android:layout_height="@dimen/dip24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20心豆"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="@dimen/dip10"
            android:background="@drawable/evaluation_module_shape_solid_fff2f5fb_corner6"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/dip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三天"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginVertical="@dimen/dip3"
                android:src="@drawable/evaluation_module_bean"
                android:layout_width="@dimen/dip24"
                android:layout_height="@dimen/dip24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20心豆"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="@dimen/dip10"
            android:background="@drawable/evaluation_module_shape_solid_fff2f5fb_corner6"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第四天"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginVertical="@dimen/dip3"
                android:src="@drawable/evaluation_module_bean"
                android:layout_width="@dimen/dip24"
                android:layout_height="@dimen/dip24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20心豆"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dip10"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal">

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/evaluation_module_shape_solid_fff2f5fb_corner6"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/dip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第五天"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginVertical="@dimen/dip3"
                android:src="@drawable/evaluation_module_bean"
                android:layout_width="@dimen/dip24"
                android:layout_height="@dimen/dip24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20心豆"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="@dimen/dip10"
            android:background="@drawable/evaluation_module_shape_solid_fff2f5fb_corner6"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/dip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第六天"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginVertical="@dimen/dip3"
                android:src="@drawable/evaluation_module_bean"
                android:layout_width="@dimen/dip24"
                android:layout_height="@dimen/dip24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20心豆"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="@dimen/dip10"
            android:background="@drawable/evaluation_module_shape_solid_fff2f5fb_corner6"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginStart="@dimen/dip10"
                android:layout_marginTop="@dimen/dip5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第七天"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginEnd="@dimen/dip5"
                    android:layout_marginTop="@dimen/dip5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连续签到7天送200心豆"
                    android:textColor="#ff999999"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageView
                android:layout_marginEnd="@dimen/dip10"
                android:layout_marginVertical="@dimen/dip3"
                android:src="@drawable/evaluation_module_bean"
                android:layout_width="@dimen/dip64"
                android:layout_height="@dimen/dip64" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

