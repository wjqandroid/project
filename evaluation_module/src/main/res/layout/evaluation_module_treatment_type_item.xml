<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    android:background="@color/COLOR_WHITE_FFFFFF"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dip0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.visionvera.library.widget.ICircleImageView
            android:id="@+id/iv_evaluation_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dip70"
            android:layout_marginLeft="@dimen/dip10"
            android:layout_marginTop="@dimen/dip10"
            android:layout_marginRight="@dimen/dip10"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_evaluation_type"
            style="@style/wrap_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip5"
            android:textColor="@color/COLOR_GRAY_5E616B"
            android:textSize="@dimen/font12" />
    </LinearLayout>
</LinearLayout>
