<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:gravity="center_vertical"
    android:background="@color/COLOR_WHITE_FFFFFF"
    android:layout_marginHorizontal="@dimen/common_padding_horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/evaluation_module_discount_ticket_head_bg"
        android:orientation="vertical"
        android:layout_width="@dimen/dip90"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/dip5"
                android:id="@+id/tvMoneyFlag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:gravity="top"
                app:layout_constraintStart_toEndOf="@id/tvMoneyFlag"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#ffffffff"
                android:textSize="30sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_marginTop="@dimen/dip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满0元可用"
            android:textColor="#ffffffff"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:paddingHorizontal="@dimen/dip10"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:maxWidth="150dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅限心理咨询服务"
                android:textColor="#ff333333"
                android:textSize="17sp" />


            <TextView
                android:layout_marginStart="@dimen/dip5"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tvTitle"
                android:paddingHorizontal="@dimen/dip5"
                android:paddingVertical="@dimen/dip1"
                android:background="@drawable/evaluation_module_new_person_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新人劵"
                android:textColor="#ffffffff"
                android:textSize="9sp" />


        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/dip10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.07.20-2020.07.30"
            android:textColor="#ff999999"
            android:textSize="12sp" />

    </LinearLayout>

    <CheckBox
        android:layout_marginHorizontal="@dimen/dip10"
        android:id="@+id/checkBox"
        style="@style/account_module_MyCheckBox"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:focusable="true"
        android:clickable="true" />


</LinearLayout>
