<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.counselling.activity.OrderConsultActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip44">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="18dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/base_module_back" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/rl_back"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:text="返回" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLength="12"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="标题" />


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="right"
            android:paddingHorizontal="19dp"
            android:paddingVertical="5dp"
            android:text="咨询须知 "
            android:textColor="#ff3e86fe"
            android:textSize="14sp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_WHITE_F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/evaluation_module_order_consult_select_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/COLOR_white_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/common_padding_horizontal"
                    android:paddingVertical="@dimen/dip18">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#ff0000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/evaluation_module_select_time"
                                android:textColor="@color/COLOR_BLACK_333333"
                                android:textSize="14sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/evaluation_module_select_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/COLOR_BLACK_222222"
                        android:textColorHint="#B6B6B6"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/evaluation_module_arrow_right" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip1"
                    android:layout_marginLeft="@dimen/dip16"
                    android:background="#fff2f1f6">

                </View>

                <LinearLayout
                    android:id="@+id/evaluation_module_order_consult_select_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip55"
                    android:background="@color/COLOR_white_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/common_padding_horizontal"
                    android:paddingVertical="@dimen/dip18">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#ff0000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="选择类型"
                                android:textColor="@color/COLOR_BLACK_333333"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/evaluation_module_select_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/COLOR_BLACK_222222"
                        android:textColorHint="#B6B6B6"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/evaluation_module_arrow_right" />


                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dip16"
                    android:background="#fff2f1f6">

                </View>


                <LinearLayout
                    android:id="@+id/evaluation_module_order_consult_service_network"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip55"
                    android:background="@color/COLOR_white_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/common_padding_horizontal"
                    android:paddingVertical="@dimen/dip18"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#ff0000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/evaluation_module_service_network"
                                android:textColor="@color/COLOR_BLACK_333333"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/evaluation_module_select_service_network_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/COLOR_BLACK_222222"
                        android:textColorHint="#B6B6B6"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/evaluation_module_arrow_right" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip1"
                    android:layout_marginLeft="@dimen/dip16"
                    android:background="#fff2f1f6"
                    android:visibility="gone">

                </View>

                <LinearLayout
                    android:id="@+id/evaluation_module_order_consult_problem_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip55"
                    android:background="@color/COLOR_white_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/common_padding_horizontal"
                    android:paddingVertical="@dimen/dip18">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#ff0000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="问题类型"
                                android:textColor="@color/COLOR_BLACK_333333"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/evaluation_module_select_problem_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/COLOR_BLACK_222222"
                        android:textColorHint="#B6B6B6"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/evaluation_module_arrow_right" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/COLOR_white_ffffff"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:paddingVertical="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="22dp"
                        android:text="@string/evaluation_module_upload_appendix"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/evaluation_module_upload_appendix_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（上传附件图片，最多4张）"
                        android:textColor="#fff83f3b"
                        android:textSize="12sp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/evaluation_module_upload_appendix_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/COLOR_white_ffffff"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/evaluation_module_input_remark"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/200"
                        android:textColor="@color/COLOR_BLACK_333333"
                        android:textSize="14sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="@string/evaluation_module_input_remark_information"
                    android:maxLength="200"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/evaluation_module_order_consult_commit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="40dp"
                android:background="@drawable/bg_logout"
                android:gravity="center"
                android:text="@string/evaluation_module_commit"
                android:textColor="@color/COLOR_white_ffffff"
                android:textSize="18sp" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>
