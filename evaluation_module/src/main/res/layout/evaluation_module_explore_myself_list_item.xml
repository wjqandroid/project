<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:background="@color/COLOR_white_ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:paddingTop="18dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/evaluation_module_explore_myself_attribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            tools:text="测试属性"
            android:textColor="@color/COLOR_BLACK_333333"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/evaluation_module_explore_myself_scale_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginRight="20dp"
                tools:text="测试量表名称测试量表名称测试量表名称测试量表名称测试量表名称"
                android:textColor="#ff333333"
                android:textSize="24sp"
                />

            <ImageView
                android:id="@+id/evaluation_module_explore_myself_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/evaluation_module_tiger"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/evaluation_module_explore_myself_tag_layout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/evaluation_module_explore_myself_item_time"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2019年09月10日"
            android:textColor="@color/COLOR_GRAY_999999"
            android:textSize="14sp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
