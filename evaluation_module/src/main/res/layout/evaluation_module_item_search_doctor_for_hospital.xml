<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/COLOR_white_ffffff"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/dip10"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.visionvera.library.widget.view.CircleImageView
            android:id="@+id/hospital_iv_head"
            android:layout_width="@dimen/dip56"
            android:layout_height="@dimen/dip56"
            android:layout_marginHorizontal="@dimen/common_padding_horizontal"
            android:src="@drawable/base_module_default_hospital" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/match_wrap"
            android:layout_marginRight="@dimen/common_padding_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/evaluation_module_hospital_name"
                    style="@style/wrap_layout"
                    tools:text="积水潭医院"
                    android:textColor="@color/COLOR_BLACK_000000"
                    android:textSize="@dimen/font16"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="end"
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip10"
                    tools:text="北京市"
                    android:textColor="@color/COLOR_BLACK_000000"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginRight="@dimen/dip5"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:src="@color/base_module_theme"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@color/base_module_theme" />

                <TextView
                    android:id="@+id/evaluation_module_hospital_level"
                    style="@style/wrap_layout"
                    tools:text="三甲医院"
                    android:textColor="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font13" />

                <TextView
                    android:id="@+id/evaluation_module_hospital_type"
                    style="@style/wrap_layout"
                    android:layout_marginLeft="20dp"
                    tools:text="综合医院"
                    android:textColor="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font13" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dip10"
        android:layout_marginHorizontal="@dimen/common_padding_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/COLOR_GRAY_EEEEEE" />
</LinearLayout>
