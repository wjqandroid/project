<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_take_photo"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_take_photo"
        android:orientation="vertical"
        android:layout_width="269dp"
        android:layout_height="175dp">

        <RelativeLayout
            android:id="@+id/common_center_popup_title_layout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提示"
                android:textColor="#ff242c5e"
                android:textSize="16sp" />

            <ImageView
                android:layout_marginEnd="17dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_close"
                android:src="@drawable/close2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="确认清除缓存吗？"
                android:textColor="@color/common_text2"
                android:textSize="14sp" />


        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/bg_clear_cache_foot"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:textColor="@color/common_text2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_confirm"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="确认"
                android:textColor="@color/base_module_theme"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>