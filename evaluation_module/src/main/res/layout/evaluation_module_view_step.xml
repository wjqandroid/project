<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_white_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/evaluation_module_step_view_1day_tv"
            style="@style/evaluation_module_step_view_text"
            android:text="周一" />

        <TextView
            android:id="@+id/evaluation_module_step_view_2day_tv"
            style="@style/evaluation_module_step_view_text"
            android:text="周二" />

        <TextView
            android:id="@+id/evaluation_module_step_view_3day_tv"
            style="@style/evaluation_module_step_view_text"
            android:text="周三" />

        <TextView
            android:id="@+id/evaluation_module_step_view_4day_tv"
            style="@style/evaluation_module_step_view_text"
            android:text="周四" />

        <TextView
            android:id="@+id/evaluation_module_step_view_5day_tv"
            style="@style/evaluation_module_step_view_text"
            android:text="周五" />

        <TextView
            android:id="@+id/evaluation_module_step_view_6day_tv"
            style="@style/evaluation_module_step_view_text"
            android:text="周六" />

        <TextView
            android:id="@+id/evaluation_module_step_view_7day_tv"
            style="@style/evaluation_module_step_view_text"
            android:text="周日" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/COLOR_white_ffffff" />

        <ImageView
            android:id="@+id/evaluation_module_step_view_1day_circle"
            style="@style/evaluation_module_step_view_circle" />

        <View
            android:id="@+id/line_1"
            style="@style/evaluation_module_step_view_line" />

        <ImageView
            android:id="@+id/evaluation_module_step_view_2day_circle"
            style="@style/evaluation_module_step_view_circle" />

        <View
            android:id="@+id/line_2"
            style="@style/evaluation_module_step_view_line" />

        <ImageView
            android:id="@+id/evaluation_module_step_view_3day_circle"
            style="@style/evaluation_module_step_view_circle" />

        <View
            android:id="@+id/line_3"
            style="@style/evaluation_module_step_view_line" />

        <ImageView
            android:id="@+id/evaluation_module_step_view_4day_circle"
            style="@style/evaluation_module_step_view_circle" />

        <View
            android:id="@+id/line_4"
            style="@style/evaluation_module_step_view_line" />

        <ImageView
            android:id="@+id/evaluation_module_step_view_5day_circle"
            style="@style/evaluation_module_step_view_circle" />

        <View
            android:id="@+id/line_5"
            style="@style/evaluation_module_step_view_line" />

        <ImageView
            android:id="@+id/evaluation_module_step_view_6day_circle"
            style="@style/evaluation_module_step_view_circle" />

        <View
            android:id="@+id/line_6"
            style="@style/evaluation_module_step_view_line" />

        <ImageView
            android:id="@+id/evaluation_module_step_view_7day_circle"
            style="@style/evaluation_module_step_view_circle" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/COLOR_white_ffffff" />

    </LinearLayout>

</LinearLayout>

