<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_wrap"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/common_padding_horizontal"
    android:paddingVertical="@dimen/dip10"
    android:background="@color/COLOR_WHITE_FFFFFF">

    <com.visionvera.library.widget.ICircleImageView
        android:id="@+id/iv_tested"
        android:layout_width="@dimen/dip119"
        android:layout_height="84dp"
        android:layout_marginRight="@dimen/dip10"
        android:adjustViewBounds="true"
        android:background="@drawable/evaluation_module_default"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/ll_left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/dip5"
            tools:text="心理健康自评量表"
            android:id="@+id/tv_test_title"
            style="@style/wrap_layout"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/COLOR_BLACK_333333"
            android:textSize="@dimen/font18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_test_number"
            style="@style/wrap_layout"
            android:layout_marginTop="@dimen/dip10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="测评编号:"
            android:textColor="@color/COLOR_GRAY_666666"
            android:textSize="@dimen/font12" />

        <TextView
            android:id="@+id/tv_test_time"
            style="@style/wrap_layout"
            android:layout_marginTop="@dimen/dip10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="测评时间:"
            android:textColor="@color/COLOR_GRAY_666666"
            android:textSize="@dimen/font12" />

    </LinearLayout>


</LinearLayout>
