<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB"
    android:orientation="vertical"
    tools:context=".module.usercenter.activity.ForgetPasswordActivity">

    <include layout="@layout/base_module_common_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_padding_horizontal"
        android:layout_marginVertical="@dimen/dip10"
        android:text="修改心理健康服务平台密码后可以通过手机号+密码进行登录心理健康服务平台"
        android:textColor="@color/common_hint_text"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/COLOR_white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48">

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/input_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/phoneNumber"
                    android:background="@null"
                    android:maxLength="11"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:textColorHint="#B6B6B6"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F2F1F6" />

            <RelativeLayout
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48">

                <TextView
                    android:id="@+id/check_number"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="验证码"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/input_check_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/check_number"
                    android:background="@null"
                    android:maxLength="6"
                    android:hint="请输入验证码"
                    android:textColorHint="#B6B6B6"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:inputType="number"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/send_check_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="获取验证码"
                    android:textColor="@color/base_module_theme" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F2F1F6" />

            <RelativeLayout
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48">

                <TextView
                    android:id="@+id/setting_password"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="设置密码"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/input_setting_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/setting_password"
                    android:background="@null"
                    android:maxLength="12"
                    android:inputType="textPassword"
                    android:hint="@string/evaluation_module_password_tip"
                    android:textColorHint="#B6B6B6"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F2F1F6" />

            <RelativeLayout
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48">

                <TextView
                    android:id="@+id/confirm_password"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="确认密码"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/input_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/confirm_password"
                    android:background="@null"
                    android:maxLength="12"
                    android:inputType="textPassword"
                    android:textColorHint="#B6B6B6"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:hint="请再次确认密码"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F2F1F6" />

            <TextView
                android:id="@+id/forget_password_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/evaluation_module_bg_logout_selector"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/COLOR_white_ffffff"
                android:textSize="18sp" />
        </LinearLayout>


    </ScrollView>


</LinearLayout>