<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_depression"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dip3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/ivAuthorHead"
            android:layout_width="@dimen/dip18"
            android:layout_height="@dimen/dip18"
            android:src="@drawable/base_module_default_man"
            app:civ_border_width="0dp"
            app:civ_border_color="@color/white" />

        <TextView
            android:layout_marginStart="@dimen/dip5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="如何治疗幼儿急性寻麻疹？"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:gravity="center"
            android:background="@drawable/evaluation_module_hot_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门"
            android:textColor="#ffffffff"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:layout_marginVertical="@dimen/dip5"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="寻麻疹俗称风机块、风疙瘩、风疹团，在儿童中很常见的…"
        android:textColor="#ff999999"
        android:textSize="13sp" />


</LinearLayout>
