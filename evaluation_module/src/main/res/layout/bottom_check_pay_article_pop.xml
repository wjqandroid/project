<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_radius_12"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="发表"
            android:textColor="@color/common_text"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D5D5D5" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWriteArticle"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:src="@drawable/ic_edit_article"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="写文章"
            android:textColor="#ff333333"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDraft"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:src="@drawable/ic_draft"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/tvDraftCount"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="草稿箱(0)"
            android:textColor="#ff333333"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>