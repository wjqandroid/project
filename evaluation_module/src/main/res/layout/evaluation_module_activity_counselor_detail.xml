<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_white_ffffff"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/normal_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="131dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_bg_consul"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:id="@+id/rlTitleBar"
                            android:layout_width="match_parent"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/evaluation_module_counselor_iv_back"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:paddingHorizontal="18dp"
                                android:src="@drawable/base_module_back" />


                            <ImageView
                                android:id="@+id/evaluation_module_counselor_share"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="10dp"
                                android:paddingRight="20dp"
                                android:src="@drawable/evaluation_module_share"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlTitleBar"
                            android:layout_marginTop="@dimen/dip41"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/common_padding_horizontal">


                            <com.visionvera.library.widget.view.CircleImageView
                                android:id="@+id/evaluation_module_counselor_detail_header"
                                android:layout_width="@dimen/dip80"
                                android:layout_height="@dimen/dip80"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/base_module_default_man" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dip20"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/evaluation_module_counselor_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:lines="1"
                                        android:text=""
                                        android:textColor="@color/COLOR_BLACK_333333"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />
                                    <!--一级咨询师-->
                                    <TextView
                                        android:id="@+id/evaluation_module_counselor_level"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/dip8"
                                        android:background="@drawable/bg_solid_ffffff_r11"
                                        android:gravity="center"
                                        android:paddingHorizontal="@dimen/dip7"
                                        android:paddingVertical="@dimen/dip2"
                                        android:text=""
                                        android:textColor="@color/base_module_white"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <!--北京沐悦心理咨询机构-->
                                <TextView
                                    android:id="@+id/evaluation_module_advisory_body"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dip4"
                                    android:text=""
                                    android:textColor="#ff666666"
                                    android:textSize="14sp" />
                                <!--#婚姻家庭-->
                                <TextView
                                    android:id="@+id/evaluation_module_counselor_field"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dip8"
                                    android:text=""
                                    android:textColor="#ff3e86fe"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dip14"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dip13">

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="@dimen/dip9"
                            android:text="个人介绍"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_introduce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dip9"
                            android:layout_marginTop="@dimen/dip15"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/dip14"
                            android:textColor="@color/COLOR_BLACK_333333" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/COLOR_WHITE_F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/COLOR_white_ffffff"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip6"
                    android:text="@string/evaluation_module_service_type"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/dip16"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.visionvera.library.widget.view.CircleImageView
                        android:id="@+id/rl_text_type"
                        android:layout_width="@dimen/dip40"
                        android:layout_height="@dimen/dip40"

                        android:layout_gravity="center"
                        android:src="@mipmap/img_text_consul" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="文字咨询"
                                    android:textColor="#ff494f68"
                                    android:textSize="14sp" />
                                <!--19.9元/次-->
                                <TextView
                                    android:id="@+id/tv_text_Price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dip18"
                                    android:text=""
                                    android:textColor="#ffff782e"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="以图片、文字等形式进行咨询。"
                                android:textColor="#ff999999"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/btn_text_make"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_logout"
                            android:paddingHorizontal="@dimen/dip13"
                            android:paddingVertical="@dimen/dip5"
                            android:text="预约"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/dip16"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.visionvera.library.widget.view.CircleImageView
                        android:id="@+id/rl_voice_type"
                        android:layout_width="@dimen/dip40"
                        android:layout_height="@dimen/dip40"
                        android:layout_gravity="center"
                        android:src="@mipmap/img_voice_consul" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="语音咨询"
                                    android:textColor="#ff494f68"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_voice_Price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dip18"
                                    android:text=""
                                    android:textColor="#ffff782e"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="在约定时间，通过手机进行语音咨询。"
                                android:textColor="#ff999999"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/btn_voice_make"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_logout"
                            android:paddingHorizontal="@dimen/dip13"
                            android:paddingVertical="@dimen/dip5"
                            android:text="预约"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/dip16"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.visionvera.library.widget.view.CircleImageView
                        android:id="@+id/rl_video_type"
                        android:layout_width="@dimen/dip40"
                        android:layout_height="@dimen/dip40"
                        android:layout_gravity="center"
                        android:src="@mipmap/img_video_consul" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="视频咨询"
                                    android:textColor="#ff494f68"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_video_Price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dip18"
                                    android:text=""
                                    android:textColor="#ffff782e"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="在约定时间，通过手机进行视频咨询。"
                                android:textColor="#ff999999"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/btn_video_make"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_logout"
                            android:paddingHorizontal="@dimen/dip13"
                            android:paddingVertical="@dimen/dip5"
                            android:text="预约"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/COLOR_WHITE_F5F5F5" />

            <LinearLayout
                android:id="@+id/ll_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dip16"
                android:background="@color/COLOR_white_ffffff"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="@dimen/dip15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_evaluate_number"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:text="收到的评价（0）"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_evaluate_look_all"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="查看全部"
                        android:textColor="#ff3e86fe"
                        android:textSize="14sp" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/re_comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginBottom="@dimen/dip21">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <View
                android:id="@+id/ll_evaluate_line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/COLOR_WHITE_F5F5F5"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dip16"
                android:layout_marginBottom="@dimen/dip20"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="20dp"
                    android:text="@string/evaluation_module_order_interval"
                    android:textColor="@color/COLOR_BLACK_333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:text="工作日均可预约，具体可预约时段请在预约页面进行查看选择。"
                    android:textColor="@color/COLOR_GRAY_666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/COLOR_WHITE_F5F5F5" />


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_alignParentBottom="true"
        android:background="@color/COLOR_white_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/checkBox"
                style="@style/evaluation_module_MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal|center_vertical"
                android:padding="5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="我已知情同意"
                android:textColor="@color/COLOR_GRAY_666666"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/order_treatment_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《心理咨询预约协议》"
                android:textColor="@color/COLOR_BLUE_FF3E86FE"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="及"
                android:textColor="@color/COLOR_GRAY_666666"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/order_informed_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《知情同意书》"
                android:textColor="@color/COLOR_BLUE_FF3E86FE"
                android:textSize="12sp"
                android:visibility="gone" />


        </LinearLayout>

        <TextView
            android:id="@+id/evaluation_module_order_consult_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="41dp"
            android:background="@drawable/bg_logout"
            android:gravity="center"
            android:text="@string/evaluation_module_order_consult"
            android:textColor="@color/COLOR_white_ffffff"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
