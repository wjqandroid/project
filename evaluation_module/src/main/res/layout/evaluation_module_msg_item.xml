<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_wrap"
    android:paddingBottom="@dimen/dip10"
    android:paddingHorizontal="@dimen/common_padding_horizontal"
    android:background="@color/COLOR_WHITE_FFFFFF">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginEnd="@dimen/dip10"
        android:id="@+id/cstl_ic"
        android:layout_centerVertical="true"
        android:background="@drawable/evaluation_module_circle_fffef4f4"
        android:layout_width="@dimen/dip36"
        android:layout_height="@dimen/dip36">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/iv_new_msg"
            android:layout_width="@dimen/dip6"
            android:layout_height="@dimen/dip6"
            android:background="@drawable/evaluation_module_circle_red" />

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/dip17"
            android:layout_height="@dimen/dip22"
            android:background="@drawable/evaluation_module_message" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_toEndOf="@id/cstl_ic"
        android:id="@+id/tv_msg_title"
        style="@style/wrap_layout"
        android:layout_marginTop="@dimen/dip10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="测评通知"
        android:textColor="@color/COLOR_BLACK_333333"
        android:textSize="@dimen/font16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_msg_date"
        style="@style/wrap_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dip13"
        android:layout_marginRight="@dimen/dip19"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="10-28 10:10"
        android:textColor="@color/COLOR_GRAY_70798D"
        android:textSize="@dimen/font12" />

    <TextView
        android:layout_toEndOf="@id/cstl_ic"
        android:id="@+id/tv_msg_content"
        style="@style/match_wrap"
        android:layout_below="@+id/tv_msg_title"

        android:layout_marginTop="@dimen/dip4"
        android:layout_marginRight="@dimen/dip19"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="王美丽邀请你参加“幸福感提升”心理测评"
        android:textColor="@color/COLOR_GRAY_70798D"
        android:textSize="@dimen/font13" />

</RelativeLayout>
