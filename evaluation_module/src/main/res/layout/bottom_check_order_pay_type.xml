<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingHorizontal="@dimen/common_padding_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="付款详情"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/base_module_close_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_marginVertical="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="¥600.00"
            android:textColor="#ff232323"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingHorizontal="@dimen/common_padding_horizontal"
            android:id="@+id/ll_zhifubao"

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:src="@drawable/alipay"
                android:layout_width="38dp"
                android:layout_height="38dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="支付宝快捷支付"
                android:textColor="#232323"
                android:textSize="18sp" />

            <RadioButton
                android:checked="true"
                android:background="@drawable/selector_rb"
                android:button="@null"
                android:id="@+id/rb_zhifubao"
                android:text=""
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:paddingHorizontal="@dimen/common_padding_horizontal"
            android:id="@+id/ll_weixin"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:src="@drawable/wenxin"
                android:layout_width="38dp"
                android:layout_height="38dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="#232323"
                android:textSize="18sp" />

            <RadioButton
                android:background="@drawable/selector_rb"
                android:button="@null"
                android:id="@+id/rb_weixin"
                android:text=""
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D8D8" />

        <RelativeLayout
            android:layout_marginTop="80dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/rl_ok"
            android:layout_marginHorizontal="@dimen/common_padding_horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认支付"
                android:textColor="@color/COLOR_white_ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>