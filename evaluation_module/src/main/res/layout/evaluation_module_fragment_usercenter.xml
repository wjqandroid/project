<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_layout"
    android:background="@color/COLOR_WHITE_F5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip170"
        android:background="#F2F6FF"
        android:paddingHorizontal="@dimen/common_padding_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip70"
            android:orientation="horizontal">

            <com.visionvera.library.widget.view.CircleImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/dip70"
                android:layout_height="@dimen/dip70"
                android:layout_marginLeft="@dimen/dip5"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/base_module_default_man" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_username"
                        style="@style/wrap_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="登录"
                        android:textColor="#333333"
                        android:textSize="@dimen/font17"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip10"
                        android:src="@mipmap/img_edit"
                        android:visibility="gone">

                    </ImageView>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_check_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip22"
                    android:text="已连续签到 2 天"
                    android:textColor="#FE726E"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/xindou_layout"
                style="@style/wrap_layout"
                android:layout_gravity="center_vertical"
                android:background="@drawable/evaluation_module_orange_r12"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dip5">

                <ImageView
                    android:layout_width="@dimen/dip12"
                    android:layout_height="@dimen/dip12"
                    android:src="@mipmap/img_happy_bean" />

                <TextView
                    android:id="@+id/tv_heartBeans"
                    style="@style/wrap_layout"
                    android:layout_marginLeft="@dimen/dip5"
                    android:paddingRight="@dimen/dip5"
                    android:text="239"
                    android:textColor="#FEFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <!--            <LinearLayout-->
            <!--                android:id="@+id/xindou_layout"-->
            <!--                style="@style/wrap_layout"-->
            <!--                android:layout_gravity="center_vertical"-->
            <!--                android:background="@drawable/evaluation_module_shape_solid_2e000000_corner6"-->
            <!--                android:foreground="?android:attr/selectableItemBackground"-->
            <!--                android:gravity="center"-->
            <!--                android:orientation="horizontal"-->
            <!--                android:paddingHorizontal="@dimen/dip5">-->

            <!--                <ImageView-->
            <!--                    android:layout_width="@dimen/dip38"-->
            <!--                    android:layout_height="@dimen/dip38"-->
            <!--                    android:src="@drawable/evaluation_module_bean" />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/tv_heartBeans"-->
            <!--                    style="@style/wrap_layout"-->
            <!--                    android:layout_marginLeft="@dimen/dip5"-->
            <!--                    android:paddingRight="@dimen/dip10"-->
            <!--                    android:text="239"-->
            <!--                    android:textColor="#FEFFFF"-->
            <!--                    android:textSize="@dimen/font20" />-->

            <!--            </LinearLayout>-->
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dip170"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/bg_login_white"
                android:visibility="gone">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/COLOR_white_ffffff"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:paddingVertical="@dimen/common_padding_horizontal"
                android:visibility="gone">

                <com.visionvera.psychologist.c.widget.SignBeansView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dip17"
                android:paddingTop="@dimen/dip11"
                android:paddingBottom="@dimen/dip15">

                <ImageView
                    android:id="@+id/rl_my_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/img_test">

                </ImageView>


                <ImageView
                    android:id="@+id/rl_my_counsel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/img_consulting">


                </ImageView>

                <ImageView
                    android:id="@+id/rl_my_ordertreat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/img_treatment">


                </ImageView>

            </LinearLayout>


            <com.visionvera.psychologist.c.widget.commonview.SettingItemView
                android:id="@+id/rl_collecs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                app:evaluation_module_image="@mipmap/img_collect"
                app:evaluation_module_showbottomline="true"
                app:evaluation_module_showtopline="true"
                app:evaluation_module_title="@string/evaluation_module_collects" />

            <com.visionvera.psychologist.c.widget.commonview.SettingItemView
                android:id="@+id/rl_health_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:evaluation_module_image="@mipmap/img_health_report"
                app:evaluation_module_showbottomline="true"
                app:evaluation_module_title="@string/evaluation_module_health_report" />

            <com.visionvera.psychologist.c.widget.commonview.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone"
                app:evaluation_module_image="@drawable/evaluation_module_ctest"
                app:evaluation_module_showbottomline="true"
                app:evaluation_module_title="@string/evaluation_module_mytest" />

            <com.visionvera.psychologist.c.widget.commonview.SettingItemView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone"
                app:evaluation_module_image="@drawable/evaluation_module_ctest"
                app:evaluation_module_showbottomline="true"
                app:evaluation_module_title="@string/evaluation_module_myordertreat" />

            <com.visionvera.psychologist.c.widget.commonview.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone"
                app:evaluation_module_image="@drawable/evaluation_module_ctest"
                app:evaluation_module_showbottomline="true"
                app:evaluation_module_title="@string/evaluation_module_mycounsel" />

            <com.visionvera.psychologist.c.widget.commonview.SettingItemView
                android:id="@+id/rl_message_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:evaluation_module_image="@mipmap/img_health_report"
                app:evaluation_module_showbottomline="true"
                app:evaluation_module_title="@string/evaluation_module_msg_center" />

            <com.visionvera.psychologist.c.widget.commonview.SettingItemView
                android:id="@+id/rl_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:evaluation_module_image="@mipmap/img_feedback"
                app:evaluation_module_showbottomline="true"
                app:evaluation_module_title="@string/evaluation_module_feedback" />

            <com.visionvera.psychologist.c.widget.commonview.SettingItemView
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:evaluation_module_image="@mipmap/img_set"
                app:evaluation_module_showbottomline="false"
                app:evaluation_module_title="@string/evaluation_module_setting_center" />


            <LinearLayout
                android:id="@+id/ll_settled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dip28"
                android:layout_marginTop="@dimen/dip25"
                android:layout_marginBottom="@dimen/dip40"
                android:background="@mipmap/img_mine_bg">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip31"
                    android:layout_marginTop="@dimen/dip24"
                    android:text="咨询师/医生申请入驻"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>

