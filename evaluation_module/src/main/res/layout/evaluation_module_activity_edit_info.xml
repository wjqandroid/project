<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_layout"
    android:orientation="vertical"
    tools:context=".module.usercenter.activity.EditInfoActivity">

    <RelativeLayout
        android:background="@color/COLOR_white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip44">

        <ImageView
            android:paddingHorizontal="@dimen/dip16"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/base_module_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑信息"
            android:textColor="#ff222222"
            android:textSize="18sp" />

        <TextView
            android:layout_marginEnd="@dimen/common_padding_horizontal"
            android:id="@+id/tvSubmit"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#ff3ca7ff"
            android:textSize="14sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/normal_view"
        style="@style/match_layout"
        android:background="@color/common_gray_bg">

        <LinearLayout
            style="@style/match_wrap"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="@dimen/dip10"
                android:id="@+id/ll_personHead"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textColorHint="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font14" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivPersonHead"
                    android:layout_width="@dimen/dip38"
                    android:layout_height="@dimen/dip38"
                    android:src="@drawable/base_module_default_man"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@color/white" />

                <ImageView
                    android:layout_width="@dimen/dip16"
                    android:layout_height="@dimen/dip16"
                    android:src="@drawable/evaluation_module_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nickname"
                android:layout_marginTop="@dimen/dip1"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textColorHint="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font14" />

                <ImageView
                    android:layout_width="@dimen/dip16"
                    android:layout_height="@dimen/dip16"
                    android:src="@drawable/evaluation_module_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sex"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_marginTop="@dimen/dip1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textColorHint="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font14" />

                <ImageView
                    android:layout_width="@dimen/dip16"
                    android:layout_height="@dimen/dip16"
                    android:src="@drawable/evaluation_module_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_input_birthday"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_marginTop="@dimen/dip1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生日期"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_input_birthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textColorHint="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font14" />

                <ImageView
                    android:layout_width="@dimen/dip16"
                    android:layout_height="@dimen/dip16"
                    android:src="@drawable/evaluation_module_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_job"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_marginTop="@dimen/dip1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行业"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="选择所在行业"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textColorHint="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font14" />

                <ImageView
                    android:layout_width="@dimen/dip16"
                    android:layout_height="@dimen/dip16"
                    android:src="@drawable/evaluation_module_arrow_right" />

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_marginTop="@dimen/dip1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人邮箱:"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:gravity="center_vertical|right"
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入您的邮箱"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textColorHint="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font14" />

            </LinearLayout>


            <LinearLayout
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_marginTop="@dimen/dip1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号:"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

                <EditText
                    android:gravity="center_vertical|right"
                    android:id="@+id/et_idcard_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请填写本人身份证号"
                    android:maxLines="1"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textColorHint="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font14" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_address"
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:background="@color/COLOR_white_ffffff"
                android:layout_marginTop="@dimen/dip1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地区"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="省、市、区、街道、社区"
                    android:maxLines="2"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/COLOR_BLACK_222222"
                    android:textColorHint="@color/COLOR_GRAY_999999"
                    android:textSize="@dimen/font14" />

                <ImageView
                    android:layout_width="@dimen/dip16"
                    android:layout_height="@dimen/dip16"
                    android:src="@drawable/evaluation_module_arrow_right" />

            </LinearLayout>
            <TextView
                android:paddingHorizontal="@dimen/common_padding_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="11dp"
                android:text="*性别，出生日期，身份证号提交后不能进行修改，请认真填写。"
                android:textColor="#ffff6d00"
                android:textSize="12sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>