<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/COLOR_white_ffffff">

    <ImageView
        android:id="@+id/evaluation_module_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingHorizontal="18dp"
        android:src="@drawable/base_module_back" />

    <TextView
        android:id="@+id/evaluation_module_tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxEms="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerInParent="true"
        android:text="------"
        android:textColor="#333333"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/evaluation_module_collection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/evaluation_module_share"
        android:paddingHorizontal="10dp"
        android:visibility="invisible"
        android:src="@drawable/evaluation_module_collection" />

    <ImageView
        android:id="@+id/evaluation_module_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:visibility="invisible"
        android:src="@drawable/evaluation_module_share" />

    <TextView
        android:id="@+id/tv_right_text"
        style="@style/wrap_match"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dip20"
        android:gravity="center_vertical"
        android:textColor="@color/COLOR_BLACK_333333"
        android:textSize="@dimen/font14"
        android:visibility="gone" />

</RelativeLayout>
