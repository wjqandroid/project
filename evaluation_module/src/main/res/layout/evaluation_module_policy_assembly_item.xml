<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_solid_ffffff_r8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/dip20"
            android:layout_marginLeft="@dimen/dip14"
            android:layout_marginRight="@dimen/dip20"
            android:layout_weight="1"
            android:text="文件地址"
            android:textColor="@color/black"
            android:textSize="16sp">

        </TextView>


        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dip14"
            android:src="@drawable/evaluation_module_arrow_right" />

    </LinearLayout>


</LinearLayout>