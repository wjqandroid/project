<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    android:paddingHorizontal="@dimen/common_padding_horizontal"
    android:paddingVertical="@dimen/dip10"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/COLOR_WHITE_FFFFFF">

    <com.visionvera.library.widget.ICircleImageView
        android:id="@+id/iv_pending_test"
        android:layout_width="@dimen/dip146"
        android:layout_height="@dimen/dip88"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dip10"
        android:adjustViewBounds="true"
        android:background="@drawable/evaluation_module_default"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_test_title"
            style="@style/wrap_layout"
            android:layout_marginTop="@dimen/dip5"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="专业情商测试"
            android:textColor="@color/COLOR_BLACK_333333"
            android:textSize="@dimen/font18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_test_invitor"
            style="@style/wrap_layout"
            android:layout_marginTop="@dimen/dip10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="邀请人:"
            android:textColor="@color/COLOR_GRAY_666666"
            android:textSize="@dimen/font12" />

        <LinearLayout
            style="@style/wrap_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_test_date"
                style="@style/wrap_layout"
                android:layout_marginTop="@dimen/dip10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="有效期:"
                android:textColor="@color/COLOR_GRAY_666666"
                android:textSize="@dimen/font12" />

            <TextView
                android:id="@+id/tv_test_expired"
                style="@style/wrap_layout"
                android:layout_marginTop="@dimen/dip10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="即将过期"
                android:textColor="@color/COLOR_RED_E20000"
                android:textSize="@dimen/font12"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
