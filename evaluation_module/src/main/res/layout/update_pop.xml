<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_take_photo"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/update_popup_title"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="发现新版本"
        android:textColor="#ff242c5e"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/update_popup_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp"
                android:gravity="top|left|center"
                android:layout_gravity="center_horizontal"
                tools:text="有新版本有新版本有新版本有新版本有新版本有新版本有新版本有新版本有新版本有新版本"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:background="@drawable/bg_clear_cache_foot"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/update_popup_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/update_popup_bottom_cancel"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="不再提示"
                android:textColor="#555555"
                android:textSize="15sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                />

            <TextView
                android:id="@+id/update_popup_bottom_confirm"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="立即升级"
                android:textColor="#60B7A9"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/update_popup_bottom_must_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="#60B7A9"
            android:textSize="15sp"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>