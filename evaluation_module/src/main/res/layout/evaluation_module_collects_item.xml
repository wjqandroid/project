<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    android:background="@color/COLOR_WHITE_FFFFFF">

    <LinearLayout
        style="@style/wrap_layout"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/dip5"
        android:layout_toLeftOf="@+id/iv_collects"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dip18">

        <TextView
            android:id="@+id/tv_collects_title"
            style="@style/wrap_layout"
            android:layout_marginTop="@dimen/dip16"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="专业情商测试"
            android:textColor="@color/COLOR_BLACK_333333"
            android:textSize="@dimen/font18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_collects_desc"
            style="@style/wrap_layout"
            android:layout_marginTop="@dimen/dip7"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="你的情商有多高?"
            android:textColor="@color/COLOR_GRAY_999999"
            android:textSize="@dimen/font12" />

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginTop="@dimen/dip15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_collects_heartbeans"
                style="@style/wrap_layout"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="5个心豆"
                android:textColor="@color/COLOR_GRAY_666666"
                android:textSize="@dimen/font12" />

            <ImageView
                android:layout_width="@dimen/dip10"
                android:layout_height="@dimen/dip10"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dip4"
                android:layout_marginTop="@dimen/dip1"
                android:src="@drawable/evaluation_module_happy_peas" />

            <TextView
                android:id="@+id/tv_collects_test_num"
                style="@style/match_wrap"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="835人已测"
                android:textColor="@color/COLOR_GRAY_666666"
                android:textSize="@dimen/font12" />
        </LinearLayout>
    </LinearLayout>

    <com.visionvera.library.widget.ICircleImageView
        android:id="@+id/iv_collects"
        android:layout_width="@dimen/dip146"
        android:layout_height="@dimen/dip88"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dip14"
        android:layout_marginRight="@dimen/dip15"
        android:adjustViewBounds="true"
        android:background="@drawable/evaluation_module_default"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip1"
        android:layout_below="@+id/iv_collects"
        android:layout_marginLeft="@dimen/dip16"
        android:layout_marginTop="@dimen/dip12"
        android:layout_marginRight="@dimen/dip16"
        android:background="@color/COLOR_GRAY_EBECF0" />
</RelativeLayout>
