<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_WHITE_F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/base_module_common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="43dp"
                android:src="@drawable/evaluation_module_order_consult_success" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:gravity="center_horizontal"
                android:text="@string/evaluation_module_order_consult_commit_success"
                android:textColor="@color/COLOR_BLACK_333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="您的预约申请已提交，请耐心等待医生处理"
                android:textColor="@color/COLOR_GRAY_999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/evaluation_module_order_consult_back_to_mainpager"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_logout"
                android:gravity="center"
                android:text="@string/evaluation_module_back_mainpage"
                android:textColor="@color/COLOR_white_ffffff"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/normal_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp">

                <include layout="@layout/evaluation_module_order_treatment_recyclerview_item" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
