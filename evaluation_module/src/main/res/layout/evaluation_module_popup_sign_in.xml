<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/evaluation_module_signin_success_bg_iv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/evaluation_module_signin_success_bg"
            />

        <ImageView
            android:id="@+id/evaluation_module_signin_success_iv"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/evaluation_module_signin_success_3"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/evaluation_module_sign_in_close"
            android:layout_marginTop="42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/evaluation_module_perfect_information_close"
            />
    </RelativeLayout>

</LinearLayout>
